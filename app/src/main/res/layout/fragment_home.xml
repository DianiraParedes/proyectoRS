<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tituloQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escáner de Códigos QR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textoQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí puede escanear códigos QR"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#388E3C"
        app:layout_constraintTop_toBottomOf="@id/tituloQR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lemaResponsabilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juntos por un futuro más verde y responsable."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#1B5E20"
        app:layout_constraintTop_toBottomOf="@id/textoQR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imagenResponsabilidad"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/lemaResponsabilidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonCamara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Escanear con Cámara"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/imagenResponsabilidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonGaleria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seleccionar desde Galería"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/botonCamara"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
